<div class="container">
  <table id="cart" class="table table-hover table-condensed">
    <thead>
      <tr>
        <th class="product" ><%= t ".product" %></th>
        <th class="price" ><%= t ".price" %></th>
        <th class="quantity" ><%= t ".quantity" %></th>
        <th class="text-center subtotal"><%= t ".subtotal" %></th>
        <th class="space"></th>
      </tr>
    </thead>
    <tbody id="detail-cart">
    </tbody>
    <tfoot>
      <tr>
        <td>
          <a href="/products" class="btn btn-warning">
            <i class="fa fa-angle-left"></i>
            <%= t ".continue" %>
          </a>
        </td>
        <td colspan="2" class="hidden-xs"></td>
        <td class="hidden-xs text-center" id="sumary-cart"></td>
        <td>
          <button class="btn btn-success btn-block"
            id="add-cart-to-order">
            <%= t ".checkout" %>
            <i class="fa fa-angle-right"></i>
          </button>
        </td>
      </tr>
    </tfoot>
  </table>
</div>

<% content_for :js do %>
  <script src="/assets/cart.js"></script>
<% end %>
