<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".product"), products_path %></li>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t ".admin" %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(".categories"), categories_path %></li>
                <li><%= link_to t(".orders"), orders_path %></li>
                <li><%= link_to t(".suggestions"), suggestions_path %></li>
              </ul>
            </li>
          <% end %>
          <li><%= link_to t(".users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t(".my_orders"), myOrders_path %></li>
              <li><%= link_to t(".my_suggestions"), mySuggestions_path %></li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
        <% end %>
        <li><%= link_to t(".cart"), carts_path %></li>
      </ul>
    </nav>
  </div>
</header>
